# --------------------------------------------------------
# The following vars are set automatically per environment
# in wrangler.json and are generally not to be set here.
# --------------------------------------------------------
VITE_TEMPO_ENV="moderato"  # devnet | moderato | presto

# show react query + react router devtools
VITE_ENABLE_DEVTOOLS=true

# enable light/dark mode keyboard toggle
VITE_ENABLE_COLOR_SCHEME_TOGGLE=false

# (dev/preview) comma-separated list of allowed hosts to use in vite config
ALLOWED_HOSTS=""

# IndexSupply API key
INDEXER_API_KEY=""

# balances API URL (dev: http://localhost:8787/)
VITE_BALANCES_API_URL="http://localhost:8787/"

# Coinbase Onramp
# Backend API URL (dev: http://localhost:8788)
VITE_ONRAMP_API_URL="http://localhost:8788"

# Coinbase CDP API credentials (required for onramp)
CB_API_KEY_ID=""
CB_API_KEY_SECRET=""

# Basic-Auth for mainnet RPC
PRESTO_RPC_AUTH=""

# HTTP Basic Auth for the app (format: "user:password", leave empty to disable)
HTTP_AUTH=""

TEMPO_RPC_KEY=""

# Phone verification (onramp)
# AES-256 encryption key for PII (32 characters, e.g. "dev-encryption-key-32chars!!")
ENCRYPTION_KEY="dev-encryption-key-32chars!!"
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""
